
doctype html
html(ng-app='angHome')
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css', rel='stylesheet')
    link(href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css',rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', rel='stylesheet' )
    link(href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css', rel='stylesheet' )

    link(rel='stylesheet' href='/stylesheets/style.css')

    style(type='text/css').
        .bs-example{
            margin: 20px;
        }
        .glyphicon{
            top: 0;
        }
        .form-control-feedback{
            top: 0;
            right: -25px;
        }
        .textarea{ 
            border-style: none; 
            border-color: Transparent;
            white-space: normal;
            color:red;
        }
        #mainPanel {
            background:transparent;
            border: 1px solid #0074BD;
        }

        .panel-info{
            padding-top: 0px;
            padding-bottom: 0px;
            margin:2px;
            border-radius: 4px 4px 4px 4px;
            border: 1px solid #0074BD;
        }

        .panel-default{
            color:black;
            background:transparent;
            padding-top: 0px;
            padding-bottom: 0px;
            margin:4px;
            border-radius: 4px 4px 4px 4px;
            border: 1px solid #0074BD;
        }

        .panel-default > .panel-heading{
            color:white;
            background:#0194BD;
            padding-top: 0px;
            padding-bottom: 0px;
        }
        .panel-default > .panel-body {
            color:white;
            background:#0194BD;
            padding-top: 4px;
            padding-bottom: 0px;
        }
        .priceLabel 
        { display: inline-block; 
            width: 100px; 
            height:30px; 
            text-align: center;
            padding-top: 8px;
            padding-bottom: 5px; 
            margin:1px;
            font-size:15px;
        }
        .order{
            font-size:12px;
        }
        .h3{
            color: grey;
        }
        .h4{
            color: grey;
        }
        .h5{
            color: grey;
        }
        #criteriaPanel{max-width: 892px; margin-left: 5px;margin-right: 3px;margin-top: 3px;margin-bottom: 3px;}
        #criteriaPanel > #criteriaHeader{font-size:14px; margin-left: 3px;margin-right: 3px;margin-top: 1px;margin-bottom: 4px;}  
        #criteriaPanel > #criteriaHeader > #criteriaLabel{
            max-height: 45px; 
            font-size:12.5px; 
            word-wrap: break-word; 
            line-height: 15px; 
            
            vertical-align:middle; 
            color:black; 
            border-radius: 5px; 
            margin-top: 2px; 
            margin-bottom: 2px; 
            margin-left: 2px;
            margin-right: 2px;
        }


        /*** custom checkboxes ***/
        input[type=checkbox] { display: none; } /* to hide the checkbox itself */
        input[type=checkbox] + label:before {
          font-family: FontAwesome;
          display: inline-block;
          font-size: 20px;
        }

        input[type=checkbox] + label:before { content: "\f096"; } /* unchecked icon */
        input[type=checkbox] + label:before { letter-spacing: 15px; } /* space between checkbox and label */

        input[type=checkbox]:checked + label:before { content: "\f046"; } /* checked icon */
        input[type=checkbox]:checked + label:before { letter-spacing: 12px; } /* allow space for check mark */
        /*** custom checkboxes ***/
        #remarks {
            font-size:10px; MaxLength:10; color:black; border-radius: 5px; margin-left: 1px;margin-right: 1px; margin-top: 1px;margin-bottom: 1px; width:100%;
        }

        #loadingDiv{
            margin:0px 0px 0px 0px;
            position:fixed;
            height: 100%;
            z-index:9999;
            padding-top:200px;
            padding-left:50px;
            width:100%;
            clear:none;
            
            /*background-color:#666666;
            border:1px solid #000000;*/
        }

        #loadingImg
        {
            position: fixed;
            left: 48%;
        }
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
          display: none !important;
        }

  body
    block content

